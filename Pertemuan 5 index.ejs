<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud Node JSN - MySQL</title>
</head>
<body>
    <h1>Daftar User/Pengguna</h1>
    <table border="1"> <tr></tr>
        <tr>ID</tr>
        <tr>Nama</tr>
        <tr>Email</tr>
        <tr>Telepon </tr>
        <tr>Aksi</tr>
    </tr>
    <% user.forEach(pengguna => {%>
    <tr>
        <td><%= pengguna.ID %></td>
        <td><%= pengguna.Nama %></td>
        <td><%= pengguna.Email %></td>
        <td><%= pengguna.Telepon %></td>
        <td>
            <a href="/edit/<%= pengguna.ID %>">Edit</a> |
            <a href="/delete/<%= pengguna.ID %>">Hapus</a> 
        </td>
    </tr>
    <% }) %>
    </table>

    <h2>Tambah pengguna baru
        <form action="/add" method="p">
            <label for="Name">Nama:</label>
            <input type="text" id="nama" name="name" required><br>
            <label for="email">Email:</label>
            <input type="text" name="email" id="email"><br>
            <label for="phone">Telepon:</label>
            <input type="text" name="phone" id="phone"><br>
            <button type="submit">Tambah</button>
        </form>
    </h2>
</body>
</html>
